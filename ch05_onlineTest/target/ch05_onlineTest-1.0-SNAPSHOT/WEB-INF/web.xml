<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.UserAddServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserFindServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.UserFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Question_addServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.Question_addServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Question_findServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.Question_findServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Question_findByidServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.Question_findByidServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Question_updateServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.Question_updateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Question_deleteServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.Question_deleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Question_deleteServlet</servlet-name>
        <url-pattern>/question/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Question_updateServlet</servlet-name>
        <url-pattern>/question/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Question_findByidServlet</servlet-name>
        <url-pattern>/question/findId</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Question_findServlet</servlet-name>
        <url-pattern>/question/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Question_addServlet</servlet-name>
        <url-pattern>/question/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserFindServlet</servlet-name>
        <url-pattern>/user/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>


    <!--自定义 【默认欢迎资源文件 】规则
        若项目中单独设置的话 tomcat默认的就无效了
    -->
    <welcome-file-list>
       <welcome-file>login.html</welcome-file><!--静态资源文件-->
        <welcome-file>user/find</welcome-file><!--动态资源文件，用别名，并且第一个”/“一定要去掉-->
    </welcome-file-list>

    <!--注册监听接口实现类-->
    <listener>
        <listener-class>com.bjpowernode.listener.OneListener</listener-class>
    </listener>

    <!--注册过滤器接口实现类-->
    <filter>
        <filter-name>OneFilter</filter-name>
        <filter-class>com.bjpowernode.filter.OneFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OneFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>